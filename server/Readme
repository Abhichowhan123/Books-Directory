// Management of database using POSTMAN.
// Technologies to use: Nodejs, Express, mongodb.


// Routes

// Addd book in directory.
// POST
// localhost:8000/add_book
// {
//     "bookname":"tiger",
//     "author":"ravi",
//     "language":"english",
//    "publisher":"choudhary"
// }

// get ALL books available in Directory.
// GET 
// localhost:8000/all_book

// search for particular book.
// localhost:8000/single_book/:id

// Delete book from directory.
// DELETE
// localhost:8000/delete_book/:id


// PUT
/// {
//     "bookname":"tiger",
